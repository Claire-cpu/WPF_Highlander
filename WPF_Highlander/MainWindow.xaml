<Window x:Class="WPF_Highlander.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Highlander"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Grid>

        <GroupBox HorizontalAlignment="Left" Height="105" Header="Grid Dimension" Margin="24,10,0,0" VerticalAlignment="Top" Width="212">
            <Canvas HorizontalAlignment="Left" Height="36" Margin="295,37,0,0" VerticalAlignment="Top" Width="59">
                <TextBox HorizontalAlignment="Left" Height="21" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="78" Canvas.Left="-203" Canvas.Top="-22" TextChanged="TextBox_TextChanged"/>
                <TextBox Height="21" TextWrapping="Wrap" Text="" Width="78" Canvas.Left="-203" Canvas.Top="9" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Label Content="Rows" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="-284" Canvas.Top="-24"/>
                <Label Content="Columns" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="-284" Canvas.Top="7"/>
            </Canvas>
        </GroupBox>
        <GroupBox HorizontalAlignment="Left" Height="208" Header="Highlander Info" Margin="24,134,0,0" VerticalAlignment="Top" Width="312"/>
        <GroupBox HorizontalAlignment="Left" Height="100" Header="Game Option" Margin="24,347,0,0" VerticalAlignment="Top" Width="312"/>
        <Label Content="Select Type" HorizontalAlignment="Left" Margin="39,155,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.822,-0.322"/>
        <Label Content="Highlander Name " HorizontalAlignment="Left" Margin="39,209,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.822,-0.322"/>
        <Label Content="Highlander Age" HorizontalAlignment="Left" Margin="39,228,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.822,-0.322"/>
        <Label Content="Highlander Number" HorizontalAlignment="Left" Margin="39,185,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.822,-0.322"/>
        <TextBox HorizontalAlignment="Left" Height="29" Margin="146,305,0,0" TextWrapping="Wrap" Text="num of highlansers left to add" VerticalAlignment="Top" Width="172" TextChanged="TextBox_TextChanged"/>
        <TextBox HorizontalAlignment="Left" Height="17" Margin="188,190,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="72" TextChanged="TextBox_TextChanged"/>
        <RadioButton Content="Good" HorizontalAlignment="Left" Height="16" Margin="130,162,0,0" VerticalAlignment="Top" Width="52" Checked="RadioButton_Checked"/>
        <RadioButton Content="Bad" HorizontalAlignment="Left" Height="16" Margin="187,162,0,0" VerticalAlignment="Top" Width="52" Checked="RadioButton_Checked"/>
        <RadioButton Content="Default" HorizontalAlignment="Left" Height="16" Margin="238,162,0,0" VerticalAlignment="Top" Width="71" Checked="RadioButton_Checked"/>
        <Label Content="Power Level" HorizontalAlignment="Left" Margin="39,249,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.822,-0.322"/>
        <TextBox HorizontalAlignment="Left" Height="17" Margin="188,213,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="72" TextChanged="TextBox_TextChanged"/>
        <TextBox HorizontalAlignment="Left" Height="17" Margin="188,235,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="72" TextChanged="TextBox_TextChanged"/>
        <TextBox HorizontalAlignment="Left" Height="17" Margin="188,256,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="72" TextChanged="TextBox_TextChanged"/>
        <Label Content="How game ends" HorizontalAlignment="Left" Height="34" Margin="29,365,0,0" VerticalAlignment="Top" Width="95"/>
        <RadioButton Content="1 winner left" HorizontalAlignment="Left" Height="16" Margin="156,372,0,0" VerticalAlignment="Top" Width="102" Checked="RadioButton_Checked"/>
        <RadioButton Content="num of rounds" HorizontalAlignment="Left" Height="16" Margin="156,394,0,0" VerticalAlignment="Top" Width="102" Checked="RadioButton_Checked"/>
        <TextBox HorizontalAlignment="Left" Height="17" Margin="268,393,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="50" TextChanged="TextBox_TextChanged"/>
        <Button Content="Add" HorizontalAlignment="Left" Height="19" Margin="188,281,0,0" VerticalAlignment="Top" Width="72"/>
        <Button Content="Start Game" HorizontalAlignment="Left" Height="19" Margin="34,417,0,0" VerticalAlignment="Top" Width="72" Click="Button_Click"/>
    </Grid>
</Window>
